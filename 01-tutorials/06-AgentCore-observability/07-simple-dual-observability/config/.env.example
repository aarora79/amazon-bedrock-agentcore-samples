# Environment Configuration Template
# Copy this file to .env and fill in your values

# AWS Configuration
# The AWS region where your AgentCore agent is deployed
AWS_REGION=us-east-1

# AgentCore Configuration
# Your AgentCore agent ID (required for agent invocation)
AGENTCORE_AGENT_ID=your-agent-id-here

# Braintrust Configuration
# Your Braintrust API key for telemetry export
# Get this from https://www.braintrust.dev/app/settings/api-keys
BRAINTRUST_API_KEY=your-braintrust-api-key-here

# OpenTelemetry Service Configuration
# Service name for identifying your application in traces
SERVICE_NAME=agentcore-dual-observability

# Service version for tracking deployments
SERVICE_VERSION=1.0.0

# Deployment environment (dev, staging, prod)
DEPLOYMENT_ENVIRONMENT=dev

# OpenTelemetry Collector Endpoints
# GRPC endpoint for OTLP traces
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# HTTP endpoint for OTLP traces (alternative)
OTEL_EXPORTER_OTLP_HTTP_ENDPOINT=http://localhost:4318

# Enable/disable telemetry collection
OTEL_SDK_DISABLED=false

# Sampling configuration
# always_on: sample all traces (recommended for tutorials)
# always_off: sample no traces
# traceidratio: sample based on trace ID ratio (e.g., 0.1 for 10%)
OTEL_TRACES_SAMPLER=always_on

# Resource attributes (alternative to YAML configuration)
# OTEL_RESOURCE_ATTRIBUTES=service.name=agentcore-dual-observability,service.version=1.0.0,deployment.environment=dev

# CloudWatch Configuration
# CloudWatch log group for traces
CLOUDWATCH_LOG_GROUP=/aws/agentcore/traces

# CloudWatch namespace for metrics
# Use "AWS/Bedrock-AgentCore" - the official CloudWatch namespace for AgentCore metrics
CLOUDWATCH_NAMESPACE=AWS/Bedrock-AgentCore

# Logging Configuration
# Log level for application (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true
